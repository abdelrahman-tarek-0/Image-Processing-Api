{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "./build",
    //"sourceMap": true,
    "resolveJsonModule": true,
    "lib": ["es6","DOM"],
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "tests","./build","spec"],
  "include": ["src"]
}
